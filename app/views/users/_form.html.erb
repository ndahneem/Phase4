
<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="form-inputs">
      <%= f.input :username, label_html: { class: 'active' } %>
      <%= f.input :password_digest, label_html: { class: 'active' } %>
      <%= f.input :role, label_html: { class: 'active' }, collection: User::ROLE_LIST%>
      <%= f.input :email, label_html: { class: 'active' } %>
      <%= f.input :phone, label_html: { class: 'active' } %>
      <%= f.input :active %>
    </div>
  </div>
  <div class="row">
    <div class="form-actions col s8">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>